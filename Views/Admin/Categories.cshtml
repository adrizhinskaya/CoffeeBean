@model IEnumerable<CoffeeBean.Entity.Category>
@{
    ViewData["Title"] = "Categories Page";
}

<h1 class="bg-info text-white">All Categories</h1>
<a asp-action="CreateCategory" class="btn btn-secondary">Create a new Category</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>
                @if (category.CategoryImg != null)
                {
                    <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(category.CategoryImg))" />
                }
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="UpdateCategory" asp-route-id="@category.Id">Update</a>
            </td>
            <td>
                <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

