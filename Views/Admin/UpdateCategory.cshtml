@{
    ViewData["Title"] = "Update Category";
}

@model CoffeeBean.Entity.Category

<h1 class="bg-info text-white">Update Category</h1>
<a asp-action="Categories" class="btn btn-secondary">Back</a>

<form method="post">
    <div class="form-group" enctype="multipart/form-data">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    @if (Model.CategoryImg != null)
    {
        <div>
            <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.CategoryImg))" />
        </div>
    }
    <div class="form-group">
        <input type="file" name="uploadedFile" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>