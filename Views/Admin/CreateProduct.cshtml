@{
    ViewData["Title"] = "Create Product";
}

@model CoffeeBean.Entity.Product

<h1 class="bg-info text-white">Create Product</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Cathegory"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Category" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Size"></label>
        <input asp-for="Size" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Count"></label>
        <input asp-for="Count" class="form-control" />
    </div>
    <div class="form-group">
        <input type="file" name="uploadedFile" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>