@model IEnumerable<CoffeeBean.Entity.AppUser>
@{
    ViewData["Title"] = "Users Page";
}

<h1 class="bg-info text-white">All Users</h1>
<a asp-action="CreateUser" class="btn btn-secondary">Create a new User</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Update</th>
        <th>Ban</th>
        <th>Delete</th>
    </tr>
    @foreach(var appUser in Model)
            {
                <tr>
                    <td>@appUser.Id</td>
                    <td>@appUser.UserName</td>
                    <td>@appUser.Email</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="UpdateUser" asp-route-id="@appUser.Id">Update</a>
                    </td>
                    <td>
                        <form asp-action="BanUser" asp-route-id="@appUser.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-secondary">Ban</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteUser" asp-route-id="@appUser.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
</table>
